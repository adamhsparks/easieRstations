Package: easyGSODR
Type: Package
Title: Easy GSOD weather station selection using an interactive map
Version: 0.0.0.9000
Authors@R: person("Adam H.", "Sparks", role = c("aut", "cre"),
    email = "adamhsparks@gmail.com",
